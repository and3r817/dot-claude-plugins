{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tool": "Bash"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/enforce.py",
            "timeout": 1,
            "description": "Enforces modern CLI tools (rg, fd, bat, eza) over legacy commands (grep, find, cat, ls)"
          }
        ]
      }
    ]
  }
}
